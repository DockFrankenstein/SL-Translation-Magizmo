<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SLTM.Installer.Views.OptionsSelectView"
			 d:DesignWidth="400" d:DesignHeight="560">
	<StackPanel>
		<TextBlock>Select additional installation options.</TextBlock>
		<Panel Height="16"/>
		<CheckBox IsChecked="{Binding CreateDesktopShortcut}" Content="Add Shortcut to Desktop"/>
	</StackPanel>
</UserControl>
